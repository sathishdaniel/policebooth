<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="sign up" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter your first name" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter your middle name" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter your last name" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter your age" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter your gender" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_vertical|fill_horizontal"
        android:text="enter your dob" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="enter your mail-id or mobile number" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="set a password" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="conform your password" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="ok" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

</LinearLayout>